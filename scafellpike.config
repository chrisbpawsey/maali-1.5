MAALI_SYSTEM=scafellpike
MAALI_ROOT="/lustre/$MAALI_SYSTEM/local/${HCPROJECT}/${HCGROUP}/shared/software/$MAALI_OS"
MAALI_BUILD_DIR="$MAALI_ROOT/build"
MAALI_MODULE_DIR="$MAALI_ROOT/modulefiles"
MAALI_SRC="$MAALI_ROOT/src"
#MAALI_SYSTEM_BUILD="YES"
MAALI_TOOL_CPU_TARGET="na"
MAALI_REQUIRED_SYSTEM_MODULES="use.scafellpike utilities-gcc"

# note this is just a place holder for the default gnu compilers
# is not used with the initial install of maali.
MAALI_DEFAULT_COMPILERS="intel/19.3.199"
MAALI_DEFAULT_GCC_COMPILERS="gcc7/7.2.0"
MAALI_DEFAULT_INTEL_COMPILERS="intel/19.3.199"
MAALI_DEFAULT_PYTHON="python3/3.6.2"
MAALI_DEFAULT_MPI="intel_mpi/19.3.199"
MAALI_CORES=8

